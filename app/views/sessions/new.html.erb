<h1>Log in page</h1>

<%= link_to "Back to Products", products_url %>

<%= form_tag sessions_path do %>

  <div class = "field">
    <%= label_tag :email %><br/>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class = "field">
    <%= label_tag :password %><br/>
    <%= text_field_tag :password, params[:password] %>
  </div>

  <div class = "actions"><%= submit_tag "Log in" %></div>

<% end %>