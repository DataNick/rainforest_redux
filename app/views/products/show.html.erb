<h1>Products#show</h1>
<%= link_to "All Products", products_url %>
<h3>Products</h3>
	<p><%= @product.name %>:
	<%= @product.formatted_price %></p>
	<em><strong>Description</strong></em>
	<p><%= @product.description %></p>


	<h3>Reviews for <%= @product.name %></h3>
	<% @product.reviews.order(created_at: :desc).each do |review| %>
		<p>
			<%= review.comment %>
			<br />
			<% if review.comment %>
				<%=link_to "Delete comment",[@product, review], method: :delete %>
			<% end %>
			<% if review.user != nil %>
				<em> by <%= review.user.name %></em>
				Added on: <%= review.created_at.strftime("%m/%d/%Y at %I:%M%p")  %>
			<% end %>
		</p>
	<% end %>


	<%= render 'reviews/form' %>

	<%= link_to "Delete Product #{@product.name}", @product, method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
	

	




	
