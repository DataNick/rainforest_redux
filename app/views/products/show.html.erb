<h1>Product: <%= @product.name %></h1>
<%= link_to "Delete Product #{@product.name}", @product, method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %> |
<%= link_to 'Edit Attributes', edit_product_path(@product) %>
<h2>Product Attributes</h2>

	<p><strong>Name:</strong> <%= @product.name %></p>
	<p><strong>Description:</strong> <%= @product.description %></p>
	<p><strong>Price in cents:</strong> <%= format_price(@product.formatted_price) %></p>


<div id = "review_form_errors">
	<%= render :partial => "/products/review_form_errors" %>
</div>






	<h3>Reviews for <%= @product.name %></h3>
	<div id = "review_list">
		<%= render :partial => "reviews" %>
	</div>


	<%= render 'reviews/form' %>



	<script type = "text/javascript">
		$(function() {
			$("#new_review")
				.on('ajax:beforeSend', function() {
					$("input[type = submit]")
						.val('Saving...')
						.attr('disabled', true);
				})
				.on('ajax:complete', function(){
					$("input[type=submit]")
						.val('Create Review')
						.removeAttr('disabled');
				});
		});
	</script>






