<h1>Products#show</h1>
<%= link_to "All Products", products_url %>
<h3>Products</h3>
	<p><%= @product.name %>:
	<%= @product.formatted_price %></p>

<h3>Reviews</h3>
	<p>Reviews for <%= @product.name %></p>
	<% @product.reviews.each do |review| %>
		<p>
			<%= review.comment %>
			<br>
			<% if review.user != nil %>
				<em> by <%= review.user.name %></em>
				Added on: <%= review.created_at.strftime("%m/%d/%Y at %I:%M%p")  %>
			<% end %>
		</p>
	<% end %>


	<%= render 'reviews/form' %>
	

	




	
