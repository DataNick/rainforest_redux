<h1>Products#index</h1>
<%= link_to 'Welcome Page', root_path %> |
<%= link_to 'New Product', "/products/new" %> | 
<%= link_to 'Log In/New Session', "/sessions/new" %> |
<%= link_to 'List of Users', users_path %>
<p>Find me in app/views/products/index.html.erb</p>
<h3>Products</h3>
<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Price in cents</th>
		<th></th>
		<th></th>
		<th></th>
</tr>
<% @products.each do |product| %>
	<tr>
		<td><%= link_to product.name, "/products/#{product.id}" %></td>
		<td><%= product.description %></td>
		<td><%= format_price(product.formatted_price) %></td>
		<td><%= link_to 'Show', product %></td>
		<td><%= link_to 'Edit', edit_product_path(product) %></td>
		<td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'} %></td>
	</tr>
<% end %>
</table>

